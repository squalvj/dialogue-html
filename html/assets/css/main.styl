@font-face
	font-family dinR
	src url(../fonts/dinregular-webfont.woff)

@font-face
	font-family dinM
	src url(../fonts/dinmedium-webfont.woff)
	
$grid = 60px
$gutter = 40px
$gap = 48px
$black = #3c3c3c
$black2 = #4f4f4f
$gray = #e0e0e0
$gray2 = #fafafa
$white = #ffffff
$header-t = 24px
$desc-t = 18px

display()
	-webkit-display arguments
	-moz-display arguments
	-ms-display arguments
	-o-display arguments
	display arguments
flex-direction()
	-webkit-flex-direction arguments
	-moz-flex-direction arguments
	-ms-flex-direction arguments
	-o-flex-direction arguments
	flex-direction arguments
transition()
	-webkit-transition: arguments
	-moz-transition: arguments
	-ms-transition: arguments
	-o-transition: arguments
	transition: arguments

html
	box-sizing: border-box;
*, *:before, *:after
	box-sizing: inherit;
// container bootstrap
.container
	padding-right: 30px;
	padding-left: 30px;
	margin-right: auto;
	margin-left: auto;
	
@media (min-width: 768px)
	.container
		width unset
		
@media (min-width: 993px)
	.container
		width unset
		padding 0 30px
	
@media (min-width: 1280px)
	.container
		width 1240px
		//width 1170px

// owl carousel
.owl-dots
	position: absolute;
	bottom: 20px;
	margin-left: 50%;
	transform: translate(-50%);
.owl-theme .owl-dots .owl-dot.active span
	background white
.owl-theme .owl-dots .owl-dot span
	background transparent
	border 1px solid white
h1,h2,h3,p,a
	color $black
	font-family dinR
a
	text-decoration none
.util-img
	width 28px
	height auto
#logo
	width 120px
.rel
	position relative
.count-cart
	font-size 14px
	margin-left 5px
	display none
.align-center
	align-items center
.flex
	display flex
.cart
	display flex
	align-items center
section
	margin-bottom $gap
	overflow hidden
// navbar
header
	position relative
	margin-bottom 36px
	&:after
		position absolute
		width 100%
		height 3px
		content ''
		box-shadow 0px 2px 3px -1px rgba(0,0,0,0.2)
nav
	padding-top 30px
	a
		font-family dinM
		font-size 21px
		display inline-block
	.nav-wrapper
		display flex
		align-items center
	.nav-top
		justify-content space-between
	.nav-util
		display flex
		align-items center
	.nav-right
		a
			height 28px	
			margin 0 7px
			&:last-child
				margin-right 0
			&:first-child
				margin-left 0
	ul
		display flex
		justify-content center
		list-style-type none
		padding 0
		margin 0
		width 100%
		flex-wrap nowrap
		li
			margin ($gap / 2)
	
// carousel
.wrapper-outer-slider
	display flex
	border 1px solid black
.wrapper-slider
	position relative
	width 65%
#navigasi-owl
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content space-between
	z-index 2
	pointer-events none
	img
		transition all .25s ease
		pointer-events auto
		margin 0 20px
		&:hover
			transform scale(1.2)
			cursor pointer
.wrapper-caption-slider
	width 35%
	padding $gap
.header-caption-slider
	font-family dinM
	font-size $header-t
.caption-slider
	font-size $desc-t
.header-collection
	margin 0
	font-size 21px
	font-family dinM
	margin-bottom ($gap/2)
.wrapper-collection
	display flex
	margin -2.5%
	flex-wrap wrap
.desc-collections
	bottom 0
	position absolute
	display flex
	background $gray2
	padding 11px 16px
	flex-direction column
	min-height 123px
.desc-product
	color #8c8c8c
	font-size 16px
	margin 0
	max-height: 0
	overflow hidden
	transition all .50s cubic-bezier(0.77, 0, 0.175, 1);
	&:hover
		cursor auto
.item-collections
	width 20%
	margin 2.5%
	padding-bottom 123px
	position relative
	overflow hidden
	&:hover
		cursor pointer
		.desc-product
			max-height 200px
			animation-delay 0s
		.link-collections
			margin-bottom 0
			a
				margin-bottom 10px
		.desc-collections
			position absolute
			bottom 0
			left 0
.link-collections
	transition all 2s cubic-bezier(0.77, 0, 0.175, 1);
	a
		font-size $desc-t
		font-family dinM
		display block
		min-height 60px
		max-height 60px
		overflow hidden
		transition all .50s ease
		height 60px
.desc-prices
	margin-top ($gutter/2)
	display flex
	justify-content space-between
	position relative
	align-items baseline
	flex-wrap wrap
	span
		font-size $desc-t
		z-index 2
		font-family dinR
		margin-right 10px
	a
		color #8c8c8c
		z-index 2
		font-family dinR
		font-size 16px
		color #8C8C8C
		display block
		margin-top 10px
	&:before
		content: '';
		position: absolute;
		background: $gray2;
		width: 100%;
		top: 0;
		height: 160%;
.preview-item
	position relative
	width 100%
	overflow hidden
	&:after
		content ''
		display block
		padding-bottom 120%
	>div
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		background $gray
		img
			width 100%
			height auto
			
// -------------------------------------------------------------------------------------------------------------
@media (max-width: 993px)
	.wrapper-caption-slider
		padding 30px
@media (max-width: 768px)
	.item-collections
		width 45%
		margin 2.5%
	.wrapper-outer-slider
		flex-wrap wrap
	.wrapper-slider
		width 100%
	.wrapper-caption-slider
		width 100%
	.container
		padding 0 30px
@media (max-width: 576px)
	.wrapper-outer-slider
		margin 0 -30px
		border none
	.wrapper-caption-slider
		background $gray2
		padding 30px
// -----------------------------------------------------------------------------------------------------------
@-moz-document url-prefix()
	.wrapper-collection
		display block
		overflow hidden
		&:after
			clear both
	.item-collections
		float left