// owl carousel
.owl-dots
	position: absolute;
	bottom: 20px;
	margin-left: 50%;
	transform: translate(-50%);
.owl-theme .owl-dots .owl-dot.active span
	background white
.owl-theme .owl-dots .owl-dot span
	background transparent
	border 1px solid white
h1,h2,h3,p,a
	color $black
	font-family dinR
a
	text-decoration none
.util-img
	width 28px
	height auto
#logo
	width 120px
.rel
	position relative
.count-cart
	font-size 14px
	margin-left 5px
	display none
.align-center
	align-items center
.flex
	display flex
.cart
	display flex
	align-items center
section
	margin-bottom $gap
	overflow hidden
// navbar
header
	position relative
	margin-bottom 36px
	&:after
		position absolute
		width 100%
		height 2px
		content ''
		box-shadow 0px 2px 1px 1px rgba(0,0,0,0.1)
nav
	padding-top 30px
	a
		font-family dinM
		font-size 21px
		display inline-block
	.nav-wrapper
		display flex
		align-items center
	.nav-top
		justify-content space-between
	.nav-util
		display flex
		align-items end
	.nav-right
		a
			margin 0 7px
			&:last-child
				margin-right 0
			&:first-child
				margin-left 0
	ul
		display flex
		justify-content center
		list-style-type none
		padding 0
		margin 0
		width 100%
		flex-wrap wrap
		li
			margin ($gap / 2)
	
// carousel
.wrapper-outer-slider
	display flex
	border 1px solid black
.wrapper-slider
	position relative
	width 65%
#navigasi-owl
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content space-between
	z-index 2
	pointer-events none
	img
		transition all .25s ease
		pointer-events auto
		margin 0 20px
		&:hover
			transform scale(1.2)
			cursor pointer
.wrapper-caption-slider
	width 35%
	padding $gap
.header-caption-slider
	font-family dinM
	font-size $header-t
.caption-slider
	font-size $desc-t
.header-collection
	margin 0
	font-size 21px
	font-family dinM
	margin-bottom ($gap/2)
.wrapper-collection
	display flex
	margin -2.5%
	flex-wrap wrap
.item-collection
	width 20%
	margin 2.5%
	&:hover
		cursor pointer
		.desc-product
			max-height 500px
			animation-delay 0s
		.link-collection
			margin-bottom 0
	> div
		width 100%
		background $gray
		padding-bottom 180%
		position relative
		overflow hidden
		img
			width 100%
			max-height 350px
			object-fit cover
		> *
			position absolute
.desc-collection
	bottom 0
	display flex
	background $gray2
	padding 11px 16px
	flex-direction column
	min-height 123px
.link-collection
	flex-grow 10
	margin-bottom -100px
	transition all .50s cubic-bezier(0.77, 0, 0.175, 1);
	a
		font-size $desc-t
		font-family dinM
.desc-price
	margin-top ($gutter/2)
	display flex
	justify-content space-between
	position relative
	span
		font-size $desc-t
		z-index 2
	a
		color #8c8c8c
		z-index 2
	&:before
		content: '';
		position: absolute;
		background: $gray2;
		width: 120%;
		top: 0;
		left: -10%;
		height: 160%;
.desc-product
	color #8c8c8c
	font-size 16px
	max-height: 0
	overflow hidden
	transition all .50s cubic-bezier(0.77, 0, 0.175, 1);
	&:hover
		cursor auto
