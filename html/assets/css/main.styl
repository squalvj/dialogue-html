@font-face
	font-family dinR
	src url(../fonts/DINRegular.ttf)

@font-face
	font-family dinM
	src url(../fonts/DINMedium.ttf)
	
$grid = 60px
$gutter = 40px
$gap = 48px
$black = #3c3c3c
$black2 = #4f4f4f
$gray = #e0e0e0
$gray2 = #fafafa
$white = #ffffff
$header-t = 24px
$desc-t = 18px

display()
	-webkit-display arguments
	-moz-display arguments
	-ms-display arguments
	-o-display arguments
	display arguments
flex-direction()
	-webkit-flex-direction arguments
	-moz-flex-direction arguments
	-ms-flex-direction arguments
	-o-flex-direction arguments
	flex-direction arguments
transition()
	-webkit-transition: arguments
	-moz-transition: arguments
	-ms-transition: arguments
	-o-transition: arguments
	transition: arguments

html
	box-sizing: border-box;
*, *:before, *:after
	box-sizing: inherit;
// container bootstrap
.container
	padding-right: 15px;
	padding-left: 15px;
	margin-right: auto;
	margin-left: auto;
	
@media (min-width: 768px)
	.container
		width unset
		
@media (min-width: 993px)
	.container
		width unset
	
@media (min-width: 1280px)
	.container
		width 1240px
