@font-face
	font-family dinR
	src url(../fonts/dinregular-webfont.woff)

@font-face
	font-family dinM
	src url(../fonts/dinmedium-webfont.woff)

@font-face
	font-family circB
	src url(../fonts/CircularStd-Book.woff)
	
	
$grid = 60px
$gutter = 40px
$gap = 48px
$black = #3c3c3c
$black2 = #4f4f4f
$gray = #e0e0e0
$gray2 = #fafafa
$white = #ffffff
$header-t = 24px
$desc-t = 18px
$tit = 'Titillium Web', sans-serif;

display()
	-webkit-display arguments
	-moz-display arguments
	-ms-display arguments
	-o-display arguments
	display arguments
flex-direction()
	-webkit-flex-direction arguments
	-moz-flex-direction arguments
	-ms-flex-direction arguments
	-o-flex-direction arguments
	flex-direction arguments
transition()
	-webkit-transition: arguments
	-moz-transition: arguments
	-ms-transition: arguments
	-o-transition: arguments
	transition: arguments

html
	box-sizing: border-box;
*, *:before, *:after
	box-sizing: inherit;
// container bootstrap
.container,footer
	padding-right: 30px;
	padding-left: 30px;
	margin-right: auto;
	margin-left: auto;
	
@media (min-width: 768px)
	.container
		width unset
		
@media (min-width: 993px)
	.container
		width unset
		padding 0 30px
	
@media (min-width: 1280px)
	.container,footer
		width 1240px
		
		//width 1170px

// owl carousel
.owl-dots
	position: absolute;
	bottom: 20px;
	margin-left: 50%;
	transform: translate(-50%);
.owl-theme .owl-dots .owl-dot.active span
	background white
.owl-theme .owl-dots .owl-dot span
	background transparent
	border 1px solid white
h1,h2,h3,p,a
	color $black
	font-family dinR
	font-weight unset
a
	text-decoration none
.util-img
	width 28px
	height auto
#logo
	width 120px
	margin-top 5px
.rel
	position relative
.count-cart
	font-size: 14px;
	margin-left: 5px;
	display: flex;
	font-family: circB;
	background: #42a842;
	color: #fff;
	border-radius: 50px;
	padding 0 5px
	align-items: center;
	justify-content: center;
	min-height 18px
	
.align-center
	align-items center
.flex
	display flex
.cart
	display flex
	align-items center
section
	margin-bottom $gap
	overflow hidden
// navbar
header
	position relative
	margin-bottom 26px
	&.collapsible
		margin-bottom 0
		&:after
			display none
		&.bordered
			&:after
				display block
	&:after
		position absolute
		width 100%
		height 3px
		content ''
		box-shadow 0px 2px 3px -1px rgba(0,0,0,0.2)
nav
	padding-top 20px
	&.collapsible
		padding 10px 0
	a
		font-family dinM
		font-size 21px
		display inline-block
	.nav-middle
		@media (max-width: 951px)
			display none
	.nav-wrapper
		display flex
		align-items center
	.nav-top
		justify-content space-between
	.nav-util
		display flex
		align-items center
	.nav-bottom.collapsible
		display none
		@media (max-width: 951px)
			display block
	.nav-right
		a
			height 28px	
			margin 0 7px
			&:last-child
				margin-right 0
			&:first-child
				margin-left 0
	ul
		display flex
		justify-content center
		list-style-type none
		padding 0
		margin 0
		width 100%
		flex-wrap nowrap
		li
			margin ($gap / 2)

.hamburger
	display none	

// carousel
.wrapper-outer-slider
	display flex
	border 1px solid black
.wrapper-slider
	position relative
	width 65%
#navigasi-owl
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	display flex
	align-items center
	justify-content space-between
	z-index 2
	pointer-events none
	img
		transition all .25s ease
		pointer-events auto
		margin 0 20px
		&:hover
			transform scale(1.2)
			cursor pointer
.wrapper-caption-slider
	width 35%
	padding $gap
.header-caption-slider
	font-family dinM
	font-size $header-t
.caption-slider
	font-size $desc-t
.header-collection
	margin 0
	font-size 21px
	font-family dinM
	margin-bottom ($gap/2)
.wrapper-collection
	display flex
	margin -2.5%
	flex-wrap wrap
.desc-collections
	bottom 0
	position absolute
	display flex
	background $gray2
	padding 11px 16px
	flex-direction column
	min-height 123px
.desc-product
	color #8c8c8c
	font-size 16px
	margin 0
	max-height: 0
	overflow hidden
	transition all .50s cubic-bezier(0.77, 0, 0.175, 1);
	&:hover
		cursor auto
.item-collections
	width 20%
	margin 2.5%
	padding-bottom 129px
	position relative
	overflow hidden
	&:hover
		cursor pointer
		.desc-product
			max-height 200px
		.link-collections
			margin-bottom 0
			a
				margin-bottom 10px
		.desc-collections
			position absolute
			bottom 0
			left 0
.link-collections
	transition all 2s cubic-bezier(0.77, 0, 0.175, 1);
	a
		font-size $desc-t
		font-family dinM
		display block
		min-height 60px
		max-height 60px
		overflow hidden
		transition all .50s ease
		height 60px
.desc-prices
	margin-top ($gutter/2)
	display flex
	justify-content space-between
	position relative
	align-items baseline
	flex-wrap wrap
	span
		font-size $desc-t
		z-index 2
		font-family dinR
		margin-right 10px
	a
		color #8c8c8c
		z-index 2
		font-family dinR
		font-size 16px
		color #8C8C8C
		display block
		margin-top 10px
.preview-item
	position relative
	width 100%
	overflow hidden
	&:after
		content ''
		display block
		padding-bottom 120%
	>div
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		background $gray
		img
			width 100%
			height auto
.divider
	width 100%
	height 5px
	box-shadow 0px 1.5px 1px 0px rgba(0,0,0,0.2)
	

footer
	font-family $tit
	padding-bottom 60px
	position relative
	margin-top 30px
	
	.footer-address
		font-family inherit
		color #848484
		left -15px
		position relative
		h2
			font-size 17px
			font-family $tit
			margin 0
			color inherit
			font-weight unset
			&:last-of-type
				margin-top 20px
		p
			font-family inherit
			font-size 12px
			line-height 16px
			margin 0
			color inherit
	.wrapper-footer-link
		list-style-type none
		padding 0
		margin 0
		color #848484
		li
			display block
			font-size 12px
			color inherit
			font-family $tit
			&:first-child
				font-size 17px
				margin-bottom 1px
			a
				font-family $tit
				color inherit
				line-height 17px
.wrapper-footer
	display flex
	justify-content space-between
.socmed-icon
	margin-top 25px
	img
		height 20px
		margin 0 2px
		
// hero
.hero-container
	background $gray
	padding 30px 0
	.container
		display flex
		position relative
		z-index 2
.hero-header,.hero-desc
	width 50%
	p
		font-size $desc-t
		font-family dinR
		line-height 30px
	h2
		text-transform uppercase
		font-family dinM
		font-size $header-t
.hero
	margin-bottom 3.5%
	position relative
.wrapper-img-hero
	position absolute
	overflow hidden
	top 0
	left 0
	right 0
	bottom 0
	&:after
		content ''
		width 100%
		height 100%
		display block
	img
		display block
		width 100%
		height auto
.wrapper-sitemap
	margin-top 36px
	margin-bottom 36px
	a
		font-size 16px
		font-family dinM
		color #A5A5A5
		margin-right 2px
		display inline-block
	i
		color #a5a5a5
		font-size 12px
.wrapper-item
	display flex
	margin-bottom 60px
.wrapper-gallery-item
	width 40%
	position relative
.wrapper-desc-item
	width 55%
.wrapper-desc-item
	padding-left 30px
	h2
		margin 0
		font-family dinM
		font-size 21px
		color #303030
		margin-bottom 24px
	h3
		margin 0
		font-family dinR
		font-size 18px
		color #303030
		margin-bottom 24px
	button
		font-size 14px
		color white
		background $black
		padding 10px 60px
		font-family dinM
		margin-bottom 36px
	hr
		margin 0
		margin-bottom 36px
.row-2
	display flex
	align-items baseline
	label
		width 15%
		font-size 18px
		color #303030
		font-family dinR
	select
		width 40%
		font-size 18px
		color #303030
		font-family dinr
		margin-bottom 24px
	input
		margin-bottom 36px
.description-item
	margin-bottom 48px
	p
		margin 0
		margin-bottom 10px
		&:last-of-type
			margin-bottom 0
	span.title-desc
		color #303030
		font-size 18px
		font-family dinM
	span.content-desc
		font-family dinR
		color #3c3c3c
		font-size 18px
		line-height 23px
.item-spec
	h2
		font-family dinM
		color #303030
		font-size 18px
	.row-2
		margin-bottom 10px
		label
			width 30%
		span
			width 70%
			font-family dinR
			color $black
			font-size 18px
		&:last-of-type
			margin-bottom 0
		
.preview-gallery
	padding-top 125%
	position relative
	overflow hidden
	margin-bottom 20px
	background $gray
	figure
		position absolute
		left 0
		top 0
		right 0
		bottom 0
		margin 0
		img
			width 100%
			height auto
.owl-gallery
	width 100%
.navigasi-gallery
	position absolute
	bottom 0
	width 100%
	height 100%
	display flex
	justify-content space-between
	align-itemscenter
	pointer-events none
	> div
		height 100%
		z-index 2
		&.disabled
			button
				display none
		button
			height 100%
			width 30px
			background white
			border none
			&:hover
				cursor pointer

#preview
	position absolute
	top 0
	right -100%
	width 100%
	height 500px

// -------------------------------------------------------------------------------------------------------------
@media (max-width: 993px)
	.wrapper-caption-slider
		padding 30px
@media (max-width: 768px)
	.wrapper-item
		flex-wrap wrap
	.wrapper-desc-item
		width 100%
		margin-top 30px
	.wrapper-gallery-item
		width 100%
		padding-right 0
	.hero-container
		.container
			flex-wrap wrap
	.hero-header,.hero-desc
		width 100%
		p
			margin 0
		h2
			margin-top 0
	.hamburger
		display block
		width 28px
		margin-right 15px
	#logo
		width auto
		height 58px
	header
		margin-bottom 15px
		&:after
			display none
	nav
		padding-top 15px
		.nav-bottom,.nav-bottom.collapsible
			display none
		.nav-middle
			display none
	.wrapper-footer
		flex-wrap wrap
	footer
		.footer-address
			width 100%
			left 0 !important
			margin-bottom 30px
		.wrapper-footer-link
			width 50%
			margin-bottom 20px
	.item-collections
		width 45%
		margin 2.5%
	.wrapper-outer-slider
		flex-wrap wrap
	.wrapper-slider
		width 100%
	.wrapper-caption-slider
		width 100%
	.container
		padding 0 30px
	.desc-collections
		min-height unset
	.item-collections
		overflow unset
	.desc-prices
		bottom 10px
	.socmed-icon
		position relative
		left 0
		margin-top 20px
		img
			height 25px
@media (max-width: 576px)
	.container
		padding 0 15px
	footer
		padding 0 15px
	.wrapper-outer-slider
		margin 0 -30px
		border none
	.wrapper-caption-slider
		background $gray2
		padding 30px
// -----------------------------------------------------------------------------------------------------------
@-moz-document url-prefix()
	.wrapper-collection
		display block
		overflow hidden
		&:after
			clear both
	.item-collections
		float left